<Page x:Class="ISN_Forecast__Rectify11_.Statusbar"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ISN_Forecast__Rectify11_"
      xmlns:mica="clr-namespace:MicaWPF.Controls;assembly=MicaWPF"
      xmlns:controls="clr-namespace:MicaWPF.Controls;assembly=MicaWPF"
      mc:Ignorable="d" 
      d:DesignHeight="40" d:DesignWidth="800"
      Title="Statusbar">

    <Grid>
        <Border Margin="20,0,20,0" CornerRadius="10" Background="White" Opacity="0.05">
        </Border>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="50,0,0,0">
            <controls:Button Margin="0,0,0,0" CornerRadius="10" Height="34" FontSize="16" Width="90" Content="Cities" />
            <controls:Button Margin="10,0,0,0" CornerRadius="10" Height="34" FontSize="16" Width="90" Content="Settings" />
        </StackPanel>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,50,0">
            <controls:Button Margin="0,0,0,0" CornerRadius="10" Height="34" FontSize="16" Width="90" Content="Search" />
        </StackPanel>
    </Grid>
</Page>
